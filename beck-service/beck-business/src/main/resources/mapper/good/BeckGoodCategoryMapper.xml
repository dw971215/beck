<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beck.good.category.mapper.BeckGoodCategoryMapper">
    
    <resultMap type="BeckGoodCategory" id="BeckGoodCategoryResult">
        <result property="id"    column="id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="name"    column="name"    />
        <result property="icon"    column="icon"    />
        <result property="sort"    column="sort"    />
    </resultMap>

    <sql id="selectBeckGoodCategoryVo">
        select id, create_by, create_time, update_by, update_time, remark, del_flag, name, icon, sort from beck_good_category
    </sql>

    <select id="selectBeckGoodCategoryList" parameterType="BeckGoodCategory" resultMap="BeckGoodCategoryResult">
        <include refid="selectBeckGoodCategoryVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectBeckGoodCategoryById" parameterType="String" resultMap="BeckGoodCategoryResult">
        <include refid="selectBeckGoodCategoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBeckGoodCategory" parameterType="BeckGoodCategory">
        insert into beck_good_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="name != null">name,</if>
            <if test="icon != null">icon,</if>
            <if test="sort != null">sort,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="name != null">#{name},</if>
            <if test="icon != null">#{icon},</if>
            <if test="sort != null">#{sort},</if>
         </trim>
    </insert>

    <update id="updateBeckGoodCategory" parameterType="BeckGoodCategory">
        update beck_good_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="name != null">name = #{name},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="sort != null">sort = #{sort},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBeckGoodCategoryById" parameterType="String">
        delete from beck_good_category where id = #{id}
    </delete>

    <update id="deleteByLogicBeckGoodCategoryById" parameterType="String">
      UPDATE beck_good_category SET del_flag = '1' WHERE id = #{id}
    </update>

    <delete id="deleteBeckGoodCategoryByIds" parameterType="String">
        delete from beck_good_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="deleteByLogicBeckGoodCategoryByIds" parameterType="String">
        UPDATE  beck_good_category SET del_flag = '1' where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>